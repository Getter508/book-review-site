<div class="review_form">
  <%= form_for [@book, @review] do |f| %>
    <% if @review.errors.any? %>
      <div class="error_explanation">
        <h3><%= pluralize(@review.errors.count, "error") %> prohibited this submission:</h3>

        <ul>
        <% @review.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :rating %><br />
      <%= f.select(:rating, (1..10).to_a, { include_blank: 'Select Rating'}) %>
      <p>(10 is the best)</p>
    </div>

    <div class="field">
      <%= f.label :title %><br />
      <%= f.text_field :title, value: @review.title %>
    </div>

    <div class="field">
      <%= f.label :body %><br />
      <%= f.text_area :body, value: @review.body %>
    </div>

    <div class="actions">
      <%= f.submit "Submit" %>
    </div>
  <% end %>
</div>
